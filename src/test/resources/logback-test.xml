<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with minimal output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Silence Testcontainers logging -->
    <logger name="org.testcontainers" level="ERROR"/>
    <logger name="com.github.dockerjava" level="ERROR"/>
    <logger name="docker.io" level="WARN"/>
    
    <!-- Silence Karate internal logging -->
    <logger name="com.intuit.karate" level="ERROR"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>